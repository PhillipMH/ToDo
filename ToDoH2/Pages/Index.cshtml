@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<center style="margin-top: 70px;">
    <div class="container">
        <h2>Login</h2>
        <div style="margin: auto">
            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-5">
                        <input type="text" asp-for="username" placeholder="username" style="width: 300px; height: 35px; margin-left: 395px;" required />
                    </div>
                    <span class="text-danger" asp-validation-for="username"></span>
                </div>
                <div class="form-group row" style="margin-top: 4px;">
                    <div class="col-5">
                        <input type="password" asp-for="password" placeholder="password" style="width: 300px; height: 35px; margin-left: 395px;" required />
                    </div>
                    <span class="text-danger" asp-validation-for="password"></span>
                </div>
                <div class="form-group row">
                    <div class="col-2" style="margin-top: 15px;">
                        <button type="submit" style=" margin-left: 395px; width: 300px; background-color: lawngreen; font-weight: 600; margin-top: 5px;" asp-route-userid="@Model.userid">Login</button>
                    </div>
                </div>
                <div style="margin-top: 50px;">
                    <h4>Are you new?</h4>
                </div>
                <a href="/NewUser" class="btn btn-dark" style="color: white; align-content: center; padding: 10px 35px; width: 250px; font-weight: 500;">Sign up!</a>

            </form>
        </div>
    </div>
</center>